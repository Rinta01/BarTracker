
@{
    ViewBag.Title = "Registration";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BarTracker</title>
    <meta name="description">
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Raleway'>
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/icon?family=Material+Icons'>
    <link rel="stylesheet" href="~/Content/auth.css">
</head>
<body>
    <div class=container>
        <div class="authorization">
            <center class="input">
                <div class="title"> NAME</div>
                <form><input class="text" type="text" placeholder="" /></form>
            </center>
            <center class="input">
                <div class="title"> EMAIL</div>
                <form><input class="text" type="email" placeholder="" /></form>
            </center>
            <center class="input">
                <div class="title"> PASSWORD</div>
                <form><input class="text" type="password" placeholder="" /></form>
            </center>
        </div>
        <center class="sign_in">
            <button type="button">SIGN IN!</button>
        </center>
        
        
    </div>
</body>
</html>
