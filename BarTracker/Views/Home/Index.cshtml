@model BarTracker.Models.User
    @{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BarTracker</title>
    <meta name="description">
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Raleway'>
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/icon?family=Material+Icons'>
    <link rel="stylesheet" href="~/Content/main.css">
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="container">
            <a class="myprofile" href="@Url.Action("MyProfile","MyAccount")">
                <img src="~/screenshots/user.png" />
            </a>
        </div>       
        <div class="container">
                <a class=sign_in href="@Url.Action("SignOut","MyAccount")">
                    <img src="~/screenshots/sign_out.png" />
                </a>
        </div>
    }
    else
    {
        <div>
        <div class="container">
            <a class=sign_in href="@Url.Action("Authorization","MyAccount")">
                <img src="~/screenshots/sign_in.png" />
            </a>
        </div>
        <div class="container">
            <a class=register href="@Url.Action("Registration","MyAccount")">
                <img src="~/screenshots/sign_up.png" />
            </a>
        </div>
            </div>
    }   
    <a class="amster" href="@Url.Action("BarList","Home",new {SearchCity = "Amsterdam" })">
        <img src="~/screenshots/амстер.png" />
    </a>

    <a class="barcelona" href="@Url.Action("BarList","Home",new {SearchCity = "Barcelona" })">
        <img src="~/screenshots/барселона.png" />
    </a>

    <a class="berlin" href="@Url.Action("BarList","Home",new {SearchCity = "Berlin" })">
        <img src="~/screenshots/берлин.png" />
    </a>

    <div class="content">
        Choose the city which is interesting for you:
    </div>
    <form action="@Url.Action("BarList","Home")">
        <p>
            <center><input type="search" class="search" placeholder="Find your city" name="SearchCity"></center>
            <center><input type="submit" class="search1" value="Search" name="SearchCityBtn"></center>
    </p>
        <center><label>OR YOU CAN SEARCH THE BAR</label></center>
        </form>
    <form action="@Url.Action("BarSearch","Home")">
        <p>
            <center><input type="submit" class="search1" value="Search" name="SearchBarBtn"></center>
            <center><input type="search" class="search" placeholder="Find your bar" name="SearchBar"></center>
        </p>
    </form>


    <a class="wellington" href="@Url.Action("BarList","Home",new {SearchCity = "Wellington" })">
        <img src="~/screenshots/велингтон.png">
    </a>
    <a class="dublin" href="@Url.Action("BarList","Home",new {SearchCity = "Dublin" })">
        <img src="~/screenshots/дублин.png">
    </a>
    <a class="content1">
        Or just click on the icon
    </a>
</body>
</html>

