@model BarTracker.Models.User
@{
    ViewBag.Title = "Registration";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BarTracker</title>
    <meta name="description">
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Raleway'>
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/icon?family=Material+Icons'>
    <link rel="stylesheet" href="~/Content/auth.css">
</head>
<body>
    <form action="@Url.Action("Registration","MyAccount")" class=container>
        <div class="authorization">
            <div class="input">
                <div class="title"> USERNAME</div>
                <div>
                    <input class="text" type="text" placeholder="" />
                </div>
            </div>
            <div class="input">
                <div class="title"> PASSWORD</div>
                <div>
                    <input class="text" type="password" placeholder="" />
                </div>
            </div>
            <div class="input">
                <div class="title"> EMAIL</div>
                <div>
                    <input class="text" type="email" placeholder="" />
                </div>
            </div>
        </div>
        <div class="sign_in">
            <button type="button">SIGN IN!</button>
        </div>
    </form>

</body>
</html>

